   <script>
    function remove(cartid,proid,name){
     
        swal({
  title: "Are you sure to remove "+name,
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
 location.href="/deletecart/"+cartid+"/"+proid
  
  } 
});
    }
    
    function coupon(total){
       
        let cpn = document.getElementById('cpn').value
        let newtot = document.getElementById('tot')
        if(cpn===""){
             swal("coupoun is empty!","","error")
             return false
             }
             else{
        $.ajax({
        url:'/applycpn',
        method:'post',
        data:{
          cpn:cpn,
          total:total
        },
        success:(response)=>{
            if(response.invalid){
                alert('invalid')
            }
            else if(response.expiry){
                alert('expired')
            }
            else{
                newtot.innerHTML = response
            }

        }
        })
        return false
             }
        
       
    }
   </script>

