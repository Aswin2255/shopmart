<!-- Shop Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-4">
            <!-- Price Start -->
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by
                    price</span></h5>
            <div class="bg-light p-4 mb-30">
                <form id="filter">
                    <label class="custom-control custom-checkbox">
                        <input type="radio" class="custom-control-input" value="0,1000000,{{catg}}" name="Prize"
                            onchange="filt()">
                        <div class="custom-control-label">All price
                        </div>
                    </label>
                    <label class="custom-control custom-checkbox">
                        <input type="radio" class="custom-control-input" value="0,100,{{catg}}" name="Prize"
                            onchange="filt()">
                        <div class="custom-control-label">price below 100
                        </div>
                    </label>
                    <label class="custom-control custom-checkbox">
                        <input type="radio" class="custom-control-input" value="100,200,{{catg}}" name="Prize"
                            onchange="filt()">
                        <div class="custom-control-label">price between 100-200
                        </div>
                    </label>
                    <label class="custom-control custom-checkbox">
                        <input type="radio" class="custom-control-input" value="200,300,{{catg}}" name="Prize"
                            onchange="filt()">
                        <div class="custom-control-label">price between 200-300
                        </div>
                    </label>


                    <label class="custom-control custom-checkbox">
                        <input type="radio" class="custom-control-input" name="Prize" value="400000" hidden checked>

                    </label>




                </form>
            </div>
            <!-- Price End -->

            <!-- Color Start -->


            <!-- Color End -->

            <!-- Size Start -->


            <!-- Size End -->
        </div>
        <!-- Shop Sidebar End -->


        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">


                <div class="row" id="p">
                    {{#each product}}
                    <div class="col-lg-4 col-md-6 col-sm-6 pb-1 card" style="border: none;">

                        <div class="product-item  mb-4 card-wrapper">
                            <div class="product-img position-relative overflow-hidden">
                                <img class="img-fluid w-100" src="/productimage/{{this.img.[0]}}" alt="">
                                <div class="product-action">
                                    <a class="btn btn-outline-dark btn-square" onclick="addtocart('{{this._id}}')"><i
                                            class="fa fa-shopping-cart"></i></a>

                                </div>
                            </div>

                            <div class="text-center py-4">
                                <a class="h6 text-decoration-none text-truncate"
                                    href="/productdetails/{{this._id}}">{{this.name}}</a>
                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    <h5>RS{{this.ofprice}}</h5>
                                    <h6 class="text-muted ml-2"><del>rs{{this.price}}</del></h6>
                                </div>
                                <div class="d-flex align-items-center justify-content-center mb-1">
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small>(99)</small>
                                </div>
                            </div>
                        </div>


                    </div>
                    {{/each}}
                </div>
                 <div class="col-12" >
                        <nav>
                            <ul class="pagination justify-content-center" id="pagination">

                               
                               

                            </ul>
                        </nav>
                    </div>
                







            </div>
        </div>
        <!-- Shop Product End -->
    </div>

</div>
<!-- Shop End -->




