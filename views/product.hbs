<script>
    $(document).ready(function () {
        let pages = document.getElementById('pagination')
        console.log(pages)
        for(i=1;i<={{pages}};i++){
        pages.innerHTML += ` <li class="page-item "><a class="page-link" onclick="pagination(${i},'{{catg}}')"
                                        style="cursor: pointer;">${i}</a></li>`
        }
    });

    function filt() {
        let value = document.querySelector('input[name="Prize"]:checked').value;

        console.log(typeof (value))
        let price = value.split(",")
        let lt = parseInt(price[0])
        let gt = parseInt(price[1])
        let catg = price[2]
        console.log(lt)
        console.log(gt)
        $.ajax({
            url: '/filter',
            data: {
                lt: lt,
                gt: gt,
                catg: catg
            },
            method: 'get',
            success: (respose) => {
                console.log(respose)
                console.log(respose.product)
                document.getElementById('p').innerHTML = respose
                document.getElementById('pagination').classList.add('d-none')
                

            }



        })


    }
    function pagination(e, c) {

        console.log(e)
        let page = e
        let catg = c
        $.ajax({
            url: '/pagination',
            data: {
                page: page,
                catg: catg

            },
            method: 'post',
            success: (respose) => {
                console.log(respose)
                document.getElementById('p').innerHTML = respose

            }
        })
    }


</script>


