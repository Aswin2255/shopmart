<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>
   <section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="mx-1 mx-md-6" action="/signup" method="post" >

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="username" class="form-control" placeholder="enter your name" name="name" onkeyup="validatename()"/>
                      <span id="username1"></span>
                      
                    </div>
                  </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="useremail" class="form-control" placeholder="enter your email" name ="email" onkeyup="validatemail()" />
                      <span id="useremail1"></span>
                      
                    </div>
                  </div>


                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="tel" id="userphone" class="form-control" placeholder="+91 phone number" name="phone" onkeyup="validatephone()" />
                       <span id="userphone1"></span>
                    </div>
                  </div>
                  
                 

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="userpass" class="form-control" name="pass"   placeholder=" enter your password" onkeyup="validatepass()"/>
                      <span id="userpass1"></span>
                     
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="password" id="userpass2" class="form-control"   placeholder=" conform your password" onkeyup="confpass()"/>
                      <span id="userpasser2"></span>
                     
                    </div>
                  </div>
                   <div class="d-flex flex-row align-items-center mb-4">
                    <i class="far fa-money-bill-alt  fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input type="text" id="ref" class="form-control" name="referal"  placeholder="  your referal (optional)"/>
                      <span id="userpasser2"></span>
                     
                    </div>
                  </div>

                 

                  <div class="form-check d-flex justify-content-center mb-5">
                    {{# if error}}
                    
                    <label class="text-danger">user already exists </label>
                    {{/if}}

                    
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" href="/signup"  class="btn text-white btn-secondary "  onclick="return validateform()"  >Register</button>

                   <!--return validateform()= it is to prevent the form from submiting if there nis any errors-->
                     

                  </div>
                  

<p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/login" class="fw-bold text-body"><u>Login</u></a></p>
                   
                </form>

              </div>
              
              <div class="col-md-6 col-lg-6 col-xl-6 col-6 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
   

 

  </body>
  <script>
    function confpass(){
       let userpass = document.getElementById('userpass').value
                let userpass2 = document.getElementById('userpass2').value
                let er = document.getElementById('userpasser2')
                if(userpass==userpass2){
                    er.innerHTML = ""
                    return true
                }
                else{
                    er.style.color = 'red'
                    er.innerHTML = "password not matched"
                    console.log('hii')
                    return false
                }
    }
    
    function validatename(){
      let username = document.getElementById('username').value
      let nameerror = document.getElementById('username1')
      let regex = /^[a-zA-Z ]{2,30}$/;
      console.log(regex.test(username))
    
     
       if(regex.test(username)==false||username==""){
       
        nameerror.style.color = "red"
        nameerror.innerHTML = "enter valid name"
        return false
      }
      else if(username.length<5||username.length>15){
        nameerror.style.color = "red"
        nameerror.innerHTML="minimum 5 maximum 15 charcaters"
        return false
        
      }
      else{
        nameerror.style.color = "green"
        nameerror.innerHTML = ""
        return true
       
       
      }
    }
    function validatemail(){ 
    
      var format = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/
      let useremail = document.getElementById('useremail').value
      let emailerror = document.getElementById('useremail1')
      console.log(format.test(useremail))
      if(format.test(useremail)==false){
        emailerror.style.color = 'red'
        emailerror.innerHTML = "enter valid email"
        return false
      }
      else{
        emailerror.innerHTML = ""
        return true
      }
    }
    function validatephone(){
      var regex = /^\(?(\d{3})\)?[- ]?(\d{3})[- ]?(\d{4})$/;
      let userphone = document.getElementById('userphone').value
      let phoneerror = document.getElementById('userphone1')
      if(regex.test(userphone)==false){
        phoneerror.style.color = 'red'
        phoneerror.innerHTML = "enter valid phone number"
        return false
      }
      else{
        phoneerror.innerHTML = ""
        return true
      }

    }
    function validatepass(){
      let userpass = document.getElementById('userpass').value
      let passerror = document.getElementById('userpass1')
      if(userpass.length<4){
        passerror.style.color ='red'
        passerror.innerHTML = "enter min 4 character"
        return false
      }
      else{
        passerror.innerHTML = ""
        return true
      }
    }
    function validateform(){
      if(validatemail()&&validatename()&&validatepass()&&validatephone()&&validatename()&&confpass()){
        return true
      }
      else{
        validatemail()
        validatename()
        validatepass()
        validatephone()
        confpass()
        return false   
           }
    }
    
