<body>


 
                <div class="card-body" id="graph" >
                  <h5 class="card-title">Reports <span>/Today</span></h5>

                  <!-- Line Chart -->
               <canvas id="line" width="800" height="450"></canvas>
               <script>
new Chart(document.getElementById("line"), {
  type: 'line',
  data: {
    
    labels: [{{#each data}},{{this._id}}{{/each}},],
    datasets: [{ 
        data: [{{#each data}},{{this.revenue}}{{/each}}],
        label: "Revenue",
        borderColor: "#3e95cd",
        fill: false
      },
    ]
  },
  options: {
    title: {
      display: true,
      text: 'World population per region (in rupes)'
    }
  }
});
</script>
